#include<stdio.h>
int main()
{
int x,y,l;
    printf("Enter first number:");
    scanf("%d",&x);
    printf("Enter second number:");
    scanf("%d",&y);
    if(x>0&&y>0)
    {
    for(l=1;l<=x*y;l++)
    if(l%x==0&&l%y==0)
    break;
    printf("LCM of the %d and %d is %d",x,y,l);
    }
    else
printf("LCM of %d and %d is 0",x,y);
    return 0;
}
